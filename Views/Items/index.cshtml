@model IT_ATCB_Consumable_Inventory_System.Models.ItemsListViewModel

@{
    ViewData["Title"] = "Items";
}

<h2>Items</h2>

<!-- Filters -->
<form method="get" class="row g-2 mb-3">
    <div class="col-md-3">
        <input type="text" name="search" class="form-control" placeholder="Search model..." value="@Model.SearchTerm" />
    </div>
    <div class="col-md-2">
        <select name="category" class="form-control">
            <option value="">All Categories</option>
            @foreach (var cat in Model.Categories)
            {
                <option value="@cat" @(cat == Model.SelectedCategory ? "selected" : "")>@cat</option>
            }
        </select>
    </div>
    <div class="col-md-2">
        <select name="stockStatus" class="form-control">
            <option value="">All Status</option>
            <option value="OK" @(Model.StockStatusFilter == "OK" ? "selected" : "")>OK</option>
            <option value="Low Stock" @(Model.StockStatusFilter == "Low Stock" ? "selected" : "")>Low Stock</option>
            <option value="Out of Stock" @(Model.StockStatusFilter == "Out of Stock" ? "selected" : "")>Out of Stock</option>
        </select>
    </div>
    <div class="col-md-2">
        <button type="submit" class="btn btn-primary">Apply</button>
        <a href="@Url.Action("Index", "Items")" class="btn btn-warning">Clear</a>
    </div>
</form>

<!-- Items Table -->
<table class="table table-striped table-bordered table-hover align-middle">
    <thead>
        <tr>
            <th>
                <a asp-action="Index" asp-route-sort="CategoryName" asp-route-dir="@(Model.SortColumn=="CategoryName" && Model.SortDirection=="ASC" ? "DESC" : "ASC")">Category</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sort="ModelName" asp-route-dir="@(Model.SortColumn=="ModelName" && Model.SortDirection=="ASC" ? "DESC" : "ASC")">Model</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sort="CurrentQuantity" asp-route-dir="@(Model.SortColumn=="CurrentQuantity" && Model.SortDirection=="ASC" ? "DESC" : "ASC")">Qty</a>
            </th>
            <th>Unit</th>
            <th>Critical</th>
            <th>Status</th>
            <th>
                <a asp-action="Index" asp-route-sort="LastUpdated" asp-route-dir="@(Model.SortColumn=="LastUpdated" && Model.SortDirection=="ASC" ? "DESC" : "ASC")">Last Updated</a>
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Items)
        {
            <tr>
                <td>@item.CategoryName</td>
                <td>@item.ModelName</td>
                <td class="fw-bold">@item.CurrentQuantity</td>
                <td>@item.UnitOfMeasure</td>
                <td>@item.CriticalLevel</td>
                <td>
                    @if (item.StockStatus == "OK")
                    {
                        <span class="badge bg-success">OK</span>
                    }
                    else if (item.StockStatus == "Low Stock")
                    {
                        <span class="badge bg-warning text-dark">Low Stock</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">Out of Stock</span>
                    }
                </td>
                <td>@item.LastUpdated.ToString("yyyy-MM-dd HH:mm")</td>
                <td>
                    @if (Model.UserRole == "Admin" || Model.UserRole == "Editor")
                    {
                        <a href="#" class="btn btn-sm btn-outline-secondary">Edit</a>
                        <a href="#" class="btn btn-sm btn-outline-success">Update Stock</a>
                        @if (Model.UserRole == "Admin")
                        {
                            <a href="#" class="btn btn-sm btn-outline-danger" onclick="return confirm('Are you sure?')">Delete</a>
                        }
                    }
                    else
                    {
                        <span class="text-muted small">N/A</span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Pagination -->
@if (Model.TotalPages > 1)
{
    <nav>
        <ul class="pagination pagination-sm">
            <li class="page-item @(Model.Page==1 ? "disabled" : "")">
                <a class="page-link" href="@Url.Action("Index", new { page = Model.Page - 1 })">&laquo;</a>
            </li>
            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(i==Model.Page ? "active" : "")">
                    <a class="page-link" href="@Url.Action("Index", new { page = i })">@i</a>
                </li>
            }
            <li class="page-item @(Model.Page==Model.TotalPages ? "disabled" : "")">
                <a class="page-link" href="@Url.Action("Index", new { page = Model.Page + 1 })">&raquo;</a>
            </li>
        </ul>
    </nav>
}