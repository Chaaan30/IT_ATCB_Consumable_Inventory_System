@* Remove the specific DashboardViewModel model directive *@
@* @model IT_ATCB_Consumable_Inventory_System.Models.DashboardViewModel *@
@using Microsoft.AspNetCore.Identity // Assuming Identity is used for roles

@{
    // Keep ViewData["Title"] setting if needed globally, or manage per-view
    // ViewData["Title"] = "Dashboard"; 
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Inventory System</title> @* Use ViewData for title *@
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    @* Add Bootstrap Icons CSS *@
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/IT_ATCB_Consumable_Inventory_System.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        @* Updated navbar classes for custom styling and dark theme - added shadow-sm *@
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-custom-dark border-bottom box-shadow mb-3 shadow-sm">
            <div class="container-fluid">
                @* Updated brand link if needed *@
                <a class="navbar-brand custom-brand" asp-area="" asp-controller="Dashboard" asp-action="Index">
                    <i class="bi bi-box-seam"></i> Inventory System @* Added an icon *@
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Dashboard" asp-action="Index"><i class="bi bi-speedometer2"></i> Dashboard</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Items" asp-action="Index"><i class="bi bi-list-ul"></i> Items</a>
                        </li>
                        <li class="nav-item">
                            @* Placeholder link for Logs - Update controller/action as needed *@
                            <a class="nav-link text-light" asp-area="" asp-controller="Logs" asp-action="Index"><i class="bi bi-journal-text"></i> Logs</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-light" href="#" id="navbarDropdownManage" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-gear"></i> Manage
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdownManage">
                                <li><a class="dropdown-item" asp-area="" asp-controller="Categories" asp-action="Index"><i class="bi bi-tags"></i> Categories</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Supplier" asp-action="Index"><i class="bi bi-truck"></i> Suppliers</a></li>
                                @* Check if user is Admin - Requires ASP.NET Core Identity or similar role management *@
                                @if (User.IsInRole("Admin"))
                                {
                                    <li><hr class="dropdown-divider"></li>
                                    @* Placeholder link for Users - Update controller/action as needed *@
                                    <li><a class="dropdown-item" asp-area="" asp-controller="Users" asp-action="Index"><i class="bi bi-people"></i> Users</a></li>
                                }
                            </ul>
                        </li>
                    </ul>
                    @* Optional: Add user profile/logout links here *@
                </div>
            </div>
        </nav>
    </header>
    <div class="container"> @* Changed to container for centered, max-width layout *@
        <main role="main" class="pb-3">
            @RenderBody() @* This renders the content of the specific view *@
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container"> @* Match container type *@
            &copy; @DateTime.Now.Year - IT ATCB Consumable Inventory System @* Dynamic year *@
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>