@model IT_ATCB_Consumable_Inventory_System.Models.DashboardViewModel

@{
    ViewData["Title"] = "Dashboard";
}

<h2>Dashboard</h2>
<p class="text-muted">Welcome, @Model.UserName!</p>

@if (!string.IsNullOrEmpty(Model.FlashMessage))
{
    <div class="alert alert-success">@Model.FlashMessage</div>
}
@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger">@Model.ErrorMessage</div>
}

<!-- Summary Cards -->
<div class="row mb-4">
    @foreach (var card in Model.SummaryCards)
    {
        <div class="col-md-3">
            <div class="card shadow-sm text-center mb-3">
                <div class="card-body">
                    <h5 class="card-title">@card.Title</h5>
                    <p class="display-6 fw-bold mb-0">@card.Value</p>
                </div>
            </div>
        </div>
    }
</div>

<!-- Charts -->
<div class="row mb-4">
    <div class="col-md-6">
        <div class="card shadow-sm">
            <div class="card-header">Category Stock Bar Chart</div>
            <div class="card-body">
                <!-- Placeholder for chart, replace with JS chart later -->
                <ul>
                    @for (int i = 0; i < Model.CategoryStockLabels.Length; ++i)
                    {
                        <li>@Model.CategoryStockLabels[i]: @Model.CategoryStockValues[i]</li>
                    }
                </ul>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card shadow-sm">
            <div class="card-header">Top 5 Items</div>
            <div class="card-body">
                <ul>
                    @for (int i = 0; i < Model.TopItemsLabels.Length; ++i)
                    {
                        <li>@Model.TopItemsLabels[i]: @Model.TopItemsValues[i]</li>
                    }
                </ul>
            </div>
        </div>
    </div>
</div>

<!-- Recent Activity List -->
<div class="card shadow-sm mb-4">
    <div class="card-header">Recent Activity</div>
    <div class="card-body">
        <table class="table table-sm">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Item</th>
                    <th>Action</th>
                    <th>Qty</th>
                    <th>User</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var activity in Model.RecentActivities)
                {
                    <tr>
                        <td>@activity.Date.ToString("yyyy-MM-dd HH:mm")</td>
                        <td>@activity.ItemName</td>
                        <td>@activity.Action</td>
                        <td>@activity.Quantity</td>
                        <td>@activity.User</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>