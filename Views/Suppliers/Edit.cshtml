@model IT_ATCB_Consumable_Inventory_System.Models.Supplier
@{
    ViewData["Title"] = "Edit Supplier";
}

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6"> @* Limit form width *@
        <div class="card shadow-sm">
             <div class="card-header">
                <h4 class="mb-0"><i class="bi bi-pencil-square"></i> Edit Supplier: @Model.Name</h4>
            </div>
            <div class="card-body">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    <input type="hidden" asp-for="Id" />
                    <div class="mb-3">
                        <label asp-for="Name" class="form-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="ContactInfo" class="form-label"></label>
                        <textarea asp-for="ContactInfo" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="ContactInfo" class="text-danger"></span> @* Added validation span *@
                    </div>
                     <div class="d-flex justify-content-end">
                         <a asp-action="Index" class="btn btn-secondary me-2"><i class="bi bi-x-lg"></i> Cancel</a>
                         <button type="submit" class="btn btn-primary"><i class="bi bi-save"></i> Save Changes</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}